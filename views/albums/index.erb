<h1>Albums</h1>

<p>
<a href="albums/new">New Album</a>
</p>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Artist</th>
    <th></th>
    <th>Stock</th>
  </tr>
  <% for album in @albums %>
  <tr>
    <td><a href="/albums/<%= album.id %>"><%= album.name %></a></td>
    <td></td>
    <td><%= album.artist.name %></td>
    <td>|</td>
    <td><%= album.stock %></td>
  </tr>
  <% end %>
</table>
