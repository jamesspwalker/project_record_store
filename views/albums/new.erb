<form action="/albums" method="post">

<div class="new-album">

  <label for="name-field">Name</label>
  <input type="text" name="name" id="name-field" placeholder="Name" required>

  <label for="artist-field">Artist</label>
    <select name="artist_id" id="artist-field">
      <% for artist in @artists %>
      <option value="<%= artist.id %>"><%= artist.name %></option>
      <% end %>
    </select>

    <label for="stock-field">Stock:</label>
    <input type="number" name="stock" id="stock-field" placeholder="Stock" required>
  </div>

    <!--
    <input type="number" name="rating" id="rating-field" min="1" max="5" required> -->

    <div class="rating">
        <input type="radio" id="star5" name="rating" value=5 />
        <label for="star5" title="text">5 stars</label>
        <input type="radio" id="star4" name="rating" value=4 />
        <label for="star4" title="text">4 stars</label>
        <input type="radio" id="star3" name="rating" value=3 />
        <label for="star3" title="text">3 stars</label>
        <input type="radio" id="star2" name="rating" value=2 />
        <label for="star2" title="text">2 stars</label>
        <input type="radio" id="star1" name="rating" value=1 />
        <label for="star1" title="text">1 star</label>
      </div>

  <div class="submit-btn">
    <input type="submit" value="Create new Album">
  </div>


</form>
