<h3>Name: <%= @artist.name.upcase %></h3>


<h3>Albums:</h3>

<ul>
  <% @artist.albums.each do |album| %>
  <li><a href="/albums/<%= album.id %>"><%= album.name %></a></li>
  <% end %>
</ul>


<p><a href="/artists/<%= @artist.id %>/edit">Edit Artist</a></p>

<form action="/artists/<%= @artist.id %>/delete" method="post">
  <input type="submit" value="Remove Artist">
</form>
